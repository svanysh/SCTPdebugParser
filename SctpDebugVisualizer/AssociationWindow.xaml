<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="SctpDebugVisualizer.AssociationWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="{Binding Path=ID}"
	Height="Auto"
	Closed="Window_Closed"
	Width="400">
	<Window.Resources>
		<Style TargetType="Label">
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>
		
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<!-- Local  -->
		<StackPanel Orientation="Vertical" Grid.Column="0">			
			<StackPanel.Resources>
				<Style TargetType="Label">
					<Setter Property="VerticalAlignment" Value="Center"/>
					<Setter Property="FontWeight" Value="SemiBold"/>
					<Setter Property="HorizontalAlignment" Value="Right"/>
				</Style>
			</StackPanel.Resources>			
			<Label FontSize="14" FontStyle="Italic" HorizontalAlignment="Center">LOCAL SIDE</Label>
			<Label Content="{Binding Path=LocalPort}" ToolTip="Local port number"/>			
			<Label Content="{Binding Path=LocalIpAddress1}" ToolTip="First local IP address"/>			
			<Label Content="{Binding Path=LocalIpAddress2}" ToolTip="Second local IP address"/>
		</StackPanel>
		<!-- Remote -->
		<StackPanel Orientation="Vertical" Grid.Column="2">			
			<StackPanel.Resources>
				<Style TargetType="Label">
					<Setter Property="VerticalAlignment" Value="Center"/>
					<Setter Property="FontWeight" Value="SemiBold"/>
					<Setter Property="HorizontalAlignment" Value="Left"/>
				</Style>
			</StackPanel.Resources>			
			<Label FontSize="14" FontStyle="Italic" HorizontalAlignment="Center">REMOTE SIDE</Label>
			<Label Content="{Binding Path=RemotePort}" ToolTip="Remote port number"/>			
			<Label Content="{Binding Path=RemoteIpAddress1}" ToolTip="First remote IP address"/>			
			<Label Content="{Binding Path=RemoteIpAddress2}" ToolTip="Second remote IP address"/>
		</StackPanel>
		<Label
			Grid.Row="1"
			Grid.ColumnSpan="2"
			FontWeight="Bold"
			HorizontalAlignment="Center">Counters</Label>
		<CheckBox Grid.Row="1" Grid.Column="2" IsChecked="{Binding Path=IsZeroCountersShown}" Content="(Show with value=0)"/>
		<!-- counters -->
		<DataGrid Grid.Row="2" Grid.ColumnSpan="2"
				ItemsSource="{Binding Path=Counters, Mode=OneWay}"
		          IsReadOnly="True"
		          AutoGenerateColumns="False"
			CanUserResizeRows="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Counter name" Binding="{Binding Path=CounterName}"/>
				<DataGridTextColumn Header="Value" Binding="{Binding Path=CounterValue}"/>
			</DataGrid.Columns>
		</DataGrid>
